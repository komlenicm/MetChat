<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorMet">


    <TextView
        android:id="@+id/tvChatUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="Display username"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvChatLastSeenOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvChatUsername"
        android:layout_marginTop="41dp"
        android:paddingTop="3dp"
        android:text="Last seen"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="italic" />


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedChatProfileImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tvChatUsername"
        android:layout_centerInParent="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:scaleType="center"
        app:riv_oval="true"
        android:src="@drawable/default_profile" />
</RelativeLayout>